extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../../admin/mixins/pagination.pug
block content
  .container.my-3
    .row
      .col-12
        +box-head("Kết quả tìm kiếm: " + keyword)
    .row
      each product in listProducts
        .col-4.mb-3
          .product-item
            .inner-image
              img(src=product.thumbnail, alt=product.title)
            .inner-content
              h3.inner-title
                a(href=`/products/detail/${product.slug}`) #{product.title}
              .inner-price-new #{product.priceNew}$
              .inner-price-old #{product.price}$
              .inner-discount -#{product.discountPercentage}%
    +pagination(pagination)