extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block content
  .container.my-3
    .row
      .col-12
        +box-head(title)
        form(
          action="/user/password/forgot"
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Xác nhận email