include ../mixins/sub-menu.pug
header.header
  .container
    .row.align-items-center
      .col-2
        .inner-logo
          a(href="/")
            img(src="/client/images/logo.svg", alt="Logo")
      .col-4
        form(
          action="/search"
          method="GET"
        ) 
          div(class="form-group d-flex mb-0")
            input(
              type="text"
              placeholder="Nhập từ khóa..."
              class="form-control"
              name="keyword"
              value=keyword
            )
            button(
              type="submit"
              class="btn btn-primary"
            ) Tìm            
      .col-6
        .inner-menu
          ul
            li
              a(href="/") Trang chủ
            li(class='sub-menu')
              a(href="/products") Sản phẩm
              if(categories)
                +sub-menu(categories)
            li
              a(href="/cart") Giỏ hàng (#{cartTotal})
            if(user)
              li
                a(href="/user/logout") Đăng xuất
              li
                a(href="/user/profile") Chào #{user.fullName.trim().split(' ').reverse()[0]}
            else
              li
                a(href="/user/login") Đăng nhập
              li
                a(href="/user/register") Đăng ký