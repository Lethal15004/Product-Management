extends ../../layouts/default.pug
block content
    h2(class="mb-4") Phân quyền
    if(roles.length>0)
        div(class="text-right")
            button(
                type="submit"
                class="btn btn-primary mb-3"
                button-submit=`/${prefixAdmin}/roles/permissions`
            ) Cập nhật 
        table(
            class="table table-hover table-sm"
            table-permissions
        )
            thead
                tr 
                    th Tính năng 
                    each role in roles 
                        th(
                            class="text-center"
                            role-id=role.id
                        ) #{role.title}
            tbody
                tr
                    td(colspan="4")
                        b Danh mục sản phẩm 
                tr
                    td Xem 
                    each role in roles
                        td(class="text-center")
                            input(type="checkbox" data-name="products-category_view" data-id=role.id
                                checked=(role.permissions.includes('products-category_view') ? true : false)  
                                )
                tr
                    td Thêm mới 
                    each role in roles
                        td(class="text-center")
                            input(type="checkbox" data-name="products-category_create" data-id=role.id
                                checked=(role.permissions.includes('products-category_create') ? true : false)
                                )
                tr
                    td Chỉnh sửa 
                    each role in roles
                        td(class="text-center")
                            input(type="checkbox" data-name="products-category_edit" data-id=role.id
                                checked=(role.permissions.includes('products-category_edit') ? true : false)                            
                                )
                tr
                    td Xóa
                    each role in roles
                        td(class="text-center")
                            input(type="checkbox" data-name="products-category_delete" data-id=role.id
                            checked=(role.permissions.includes('products-category_delete') ? true : false)
                            )

