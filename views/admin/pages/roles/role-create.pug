extends ../../layouts/default.pug
block content
  if(roleUser.permissions.includes('roles_create'))
    h2(class="mb-4") #{title}
    form(
      action=`/${prefixAdmin}/roles/create`
      method="POST"
    )
      div(class="form-group")
        label(for="title") Tiêu đề
        input(
          type="text"
          class="form-control"
          id="title"
          name="title"
          required
        )
      div(class="form-group")
        label(for="desc") Mô tả
        input(
          type="text"
          class="form-control"
          id="desc"
          name="description"
        )
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Tạo mới